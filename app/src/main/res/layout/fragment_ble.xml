<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".BleFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <EditText
            android:id="@+id/ble_search_box_edittext"
            android:layout_width="0dp"
            android:layout_height="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginVertical="20dp"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/ble_result_recyclerview"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ble_search_box_edittext"
            app:layout_constraintBottom_toTopOf="@id/ble_scan_stop_button"
            tools:listitem="@layout/item_ble"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/ble_scan_start_button"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:text="@string/start_scan"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/ble_scan_stop_button"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/ble_scan_stop_button"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:text="@string/stop_scan"
            android:enabled="false"
            app:layout_constraintStart_toEndOf="@id/ble_scan_start_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
